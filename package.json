{
  "name": "phonica",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"next,worker\" -c \"blue,green\" \"npm run dev:next\" \"npm run dev:worker\"",
    "dev:next": "next dev --turbopack",
    "dev:worker": "tsx watch src/workers/index.ts",
    "build": "next build",
    "start": "next start",
    "worker": "tsx src/workers/index.ts",
    "worker:prod": "node dist/workers/index.js",
    "lint": "next lint",
    "test": "cross-env NODE_ENV=test jest",
    "e2e": "tsx scripts/run-e2e-with-db.ts",
    "e2e:ci": "CI=true tsx scripts/run-e2e-with-db.ts",
    "e2e:with-report": "tsx scripts/run-e2e-with-db.ts && playwright show-report",
    "e2e:run": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:db:create": "tsx scripts/e2e-db-setup.ts create",
    "e2e:db:migrate": "tsx scripts/e2e-db-setup.ts migrate",
    "e2e:db:seed": "tsx scripts/e2e-db-setup.ts seed",
    "e2e:db:drop": "tsx scripts/e2e-db-setup.ts drop",
    "e2e:db:setup": "tsx scripts/e2e-db-setup.ts setup",
    "seed:test": "tsx scripts/seed-test-data.ts",
    "e2e:smoke": "npm run e2e -- --grep @smoke --project=chromium",
    "e2e:master": "npm run e2e -- --grep @master --project=chromium",
    "e2e:materials": "npm run e2e -- --grep @materials --project=chromium",
    "e2e:workflows": "npm run e2e -- --grep @workflow --project=chromium",
    "e2e:chrome": "npm run e2e -- --project=chromium",
    "e2e:firefox": "npm run e2e -- --project=firefox",
    "e2e:webkit": "npm run e2e -- --project=webkit",
    "e2e:cross-browser": "npm run e2e -- --project=chromium --project=firefox",
    "e2e:repeat": "tsx scripts/test-e2e-repeatedly.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.8.2",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-table": "^8.21.3",
    "bullmq": "^5.53.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gridstack": "^12.2.1",
    "ioredis": "^5.6.1",
    "jotai": "^2.12.5",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.511.0",
    "next": "^15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.57.0",
    "react-leaflet": "^5.0.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "wavesurfer.js": "^7.9.5",
    "zod": "^3.25.46"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/leaflet": "^1.9.18",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^4.0.0-beta1",
    "lint-staged": "^16.1.0",
    "playwright": "^1.52.0",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
