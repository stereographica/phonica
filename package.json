{
  "name": "phonica",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently -n \"next,worker\" -c \"blue,green\" \"npm run dev:next\" \"npm run dev:worker\"",
    "dev:next": "next dev --turbopack",
    "dev:worker": "npx tsx watch src/workers/index.ts",
    "build": "next build",
    "start": "next start",
    "worker": "npx tsx src/workers/index.ts",
    "worker:prod": "node dist/workers/index.js",
    "lint": "next lint",
    "test": "cross-env NODE_ENV=test jest",
    "e2e": "npx tsx scripts/run-e2e.ts",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:smoke": "npm run e2e -- --grep @smoke",
    "e2e:master": "npm run e2e -- --grep @master",
    "e2e:materials": "npm run e2e -- --grep @materials",
    "e2e:workflows": "npm run e2e -- --grep @workflow",
    "e2e:chromium": "npm run e2e -- --project=chromium",
    "e2e:firefox": "npm run e2e -- --project=firefox",
    "e2e:webkit": "npm run e2e -- --project=webkit",
    "e2e:ci:chromium": "CI=true npx tsx scripts/run-e2e.ts --project=chromium",
    "e2e:ci:firefox": "CI=true npx tsx scripts/run-e2e.ts --project=firefox",
    "e2e:ci:webkit": "CI=true npx tsx scripts/run-e2e.ts --project=webkit",
    "e2e:db:setup": "npx tsx scripts/e2e-db-optimized.ts setup",
    "e2e:db:cleanup": "npx tsx scripts/e2e-db-optimized.ts cleanup",
    "e2e:db:cleanup-all": "npx tsx scripts/e2e-db-optimized.ts cleanup-all",
    "e2e:db:full-cleanup": "npx tsx scripts/e2e-db-optimized.ts full-cleanup",
    "e2e:db:template-setup": "npx tsx scripts/e2e-db-optimized.ts template-setup",
    "e2e:cleanup-files": "npx tsx scripts/cleanup-e2e-files.ts",
    "seed:test": "npx tsx scripts/seed-test-data.ts",
    "prepare": "husky"
  },
  "overrides": {
    "brace-expansion": "^2.0.1"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@prisma/client": "^6.10.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@tanstack/react-query": "^5.81.2",
    "@tanstack/react-table": "^8.21.3",
    "archiver": "^7.0.1",
    "bullmq": "^5.56.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "exifr": "^7.1.3",
    "gridstack": "^12.2.1",
    "ioredis": "^5.6.1",
    "jotai": "^2.12.5",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.513.0",
    "nanoid": "^5.1.5",
    "next": "^15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "react-leaflet": "^5.0.0",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "transliteration": "^2.3.5",
    "wavesurfer.js": "^7.9.9",
    "zod": "^3.25.56"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@swc/jest": "^0.2.38",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/archiver": "^6.0.3",
    "@types/jest": "^29.5.14",
    "@types/leaflet": "^1.9.18",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.52.0",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prisma": "^6.9.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
